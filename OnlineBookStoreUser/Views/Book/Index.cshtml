@model IEnumerable<OnlineBookStoreUser.Models.Review>
@{
    ViewData["Title"] = "Review";
    Layout = null;
}

<h2>Review</h2>
<br />
<br />
<a asp-controller="Book" asp-action="Review" class="btn btn-success">Add Review</a>
<table class="table table-striped">

    <thead>
        <tr>
            <th><label for="ReviewId">Review Id</label></th>
            <th><label for="ReviewSubject">Review Subject</label></th>
            <th><label for="ReviewMessage">Review Message</label></th>
            <th><label for="CustomerId">Customer Id</label></th>
            <th><label for="BookId">Book Id</label></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> @Html.DisplayFor(modelItem => item.ReviewId)</td>
                <td> @Html.DisplayFor(modelItem => item.ReviewSubject)</td>
                <td> @Html.DisplayFor(modelItem => item.ReviewMessage)</td>
                <td> @Html.DisplayFor(modelItem => item.CustomerId)</td>
                <td> @Html.DisplayFor(modelItem => item.BookId)</td>

                @*<td>

                        <a asp-controller="Author" asp-action="Edit" asp-route-id="@item.AuthorId" class="btn btn-info">Edit</a> |
                        <a asp-controller="Author" asp-action="Details" asp-route-id="@item.AuthorId" class="btn btn-primary">Details</a> |
                        <a asp-controller="Author" asp-action="Delete" asp-route-id="@item.AuthorId" class="btn btn-danger">Delete</a>
                    </td>*@
            </tr>
        }
    </tbody>
</table>


