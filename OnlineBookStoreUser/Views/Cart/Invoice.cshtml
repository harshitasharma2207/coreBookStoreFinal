@model OnlineBookStoreUser.Models.OrderBooks
@{ 
    Layout = null;
}
<html>
<head>
    <meta charset="utf-8">
    <title>Invoice</title>
    <link rel="stylesheet" href="style.css">
    <link rel="license" href="https://www.opensource.org/licenses/mit-license/">
    <script src="script.js"></script>
    <script src="~/js/Invoice.js"></script>
    <link href="~/css/Invoice.css" rel="stylesheet" />
</head>
<body>
    <header>
        <h1>Invoice</h1>
        @*<address contenteditable>
            <p>KASH Book Store</p>
           
        </address>*@
        <span><img src="~/images/logo.png" height="50%" width="70%" /><input type="file" accept="image/*"></span>
    </header>
    <article>
        <h1>Recipient</h1>
        <address contenteditable>
            <p>@ViewBag.Customers.FirstName</p>
            <p>@ViewBag.Customers.Address</p>
            <p>@ViewBag.Customers.Contact</p>
        </address>
        <table class="meta">
            @*<tr>
                <th><span contenteditable>Invoice #</span></th>
                <td><span contenteditable>101138</span></td>
            </tr>*@
            <tr>
                <th><span contenteditable>Date</span></th>
                <td><span contenteditable>
    <p id="demo"></p>
    <script>
        var d = new Date();
        document.getElementById("demo").innerHTML = d;
    </script>
</span></td>
            </tr>
           
        </table>
        <table class="inventory">

            <thead>
                <tr>
                    <th><span contenteditable>Item</span></th>
                   
                    <th><span contenteditable>Quantity</span></th>
                    <th><span contenteditable>Price</span></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.cart)
                {
                    <tr>
                        <td><a class="cut">-</a><span contenteditable>@item.Books.BookName</span></td>
                
                     
                        <td><span contenteditable>@item.Quantity</span></td>
                        <td><span data-prefix>Rs</span><span>@item.Books.BookPrice</span></td>
                    </tr>
                }
                </tbody>
        </table>
       
        <table class="balance">
           
                <tr>
                    <th><span contenteditable>Total</span></th>
                    <td><span data-prefix>Rs</span><span>@ViewBag.total</span></td>
                </tr>
            
            </table>
    </article>
    <aside>
        <h1><span contenteditable>Additional Notes</span></h1>
        <div contenteditable>
            <p>A finance charge of 1.5% will be made on unpaid balances after 30 days.</p>
        </div>
    </aside>
</body>
</html>