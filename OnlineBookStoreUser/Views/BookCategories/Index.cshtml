@model IEnumerable<OnlineBookStoreUser.Models.BookCategories>
@{

    Layout = "~/Views/Shared/_BookCategoriesLayout.cshtml";
}

@foreach (var item in Model)
{
    <div class="col-md-3 new-collections-grid">

        <div class="new-collections-grid1 animated wow slideInUp" data-wow-delay=".5s">
            <div class="new-collections-grid1-image">
                <a>
                    <center>  <img src="@item.BookCategoryImage" alt="" width="200px" height="300px"></center>
                    <h4>@item.BookCategoryName</h4>
                </a>
                <div class="new-collections-grid1-image-pos">
                    <a asp-controller="BookCategories" asp-action="Books" asp-route-id="@item.BookCategoryId">Quick View</a>

                </div>

            </div>

        </div>

    </div>
}