
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using Microsoft.AspNetCore.Http;

<!DOCTYPE html>
<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h1 class="display-4">Admin Dashboard</h1>
    <p class="lead"> </p>
</div>
<div class="container">
    <div class="card-deck mb-3 text-center">

        <div class="card mb-4 shadow-sm">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">Quick Access</h4>
            </div>
            <div class="card-body">
                <h1 class="card-title pricing-card-title"> <small class="text-muted"></small></h1>
                <ul class="list-unstyled mt-3 mb-4"></ul>
                <a asp-controller="Author" asp-action="Create" class="btn btn-primary">Add Author</a>
                <a asp-controller="Publication" asp-action="Create" class="btn btn-primary">Add Publication</a>
                <a asp-controller="Book" asp-action="Create" class="btn btn-primary">Add Book</a>
            </div>
            <br />
            <h4 class="my-0 font-weight-normal">Weekly Visitors Graph</h4>
            <br />
            <img src="~/images/chart.png" class="bd-placeholder-img " width="100%" height="55%"><rect width="70%" height="70%" fill="#777" />
        </div>

        
    </div>
</div>
